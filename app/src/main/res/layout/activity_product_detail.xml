<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".controller.ProductDetailActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/productImage" tools:srcCompat="@drawable/hoodie1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="1:1" android:contentDescription="@string/products"/>
    <TextView
            tools:text="Hoodies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productTitle"
            app:layout_constraintTop_toBottomOf="@+id/productImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" android:textSize="24sp"/>
    <TextView
            tools:text="$80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productPrice2"
            app:layout_constraintTop_toBottomOf="@+id/productTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/productDescription" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/productPrice2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            tools:text="Product Detail" android:textAlignment="center"/>
    <Button
            android:text="@string/buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/productDescription" android:layout_marginTop="16dp"
            android:background="@drawable/rounded_gradient" android:textColor="#F44336" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="buyButtonClicked"/>
</android.support.constraint.ConstraintLayout>