<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="150dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            tools:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:scaleType="centerCrop"
            android:contentDescription="@string/background_image_with_hat"/>
    <TextView
            android:text="@string/hats"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:id="@+id/categoryName"
            app:layout_constraintTop_toTopOf="@+id/categoryImage" app:layout_constraintEnd_toEndOf="@+id/categoryImage"
            app:layout_constraintStart_toStartOf="@+id/categoryImage" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/categoryImage"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:textColor="@android:color/white"
            android:textSize="18sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>